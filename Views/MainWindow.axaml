<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:tutdesk.ViewModels"
        x:Class="tutdesk.Views.MainWindow"
        Title="TutDesk"
        Background="#F5F6F7"
        MinHeight="400" MinWidth="600"
        x:DataType="vm:MainWindowViewModel">

    <DockPanel>
        <!-- Сайдбар -->
        <Border DockPanel.Dock="Left" Width="250" Background="#FFFFFF" BorderBrush="#E0E0E0" BorderThickness="1">
            <ScrollViewer>
                <ListBox ItemsSource="{Binding Pages}" 
                         SelectedItem="{Binding SelectedPage}" 
                         Background="Transparent" 
                         BorderThickness="0">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Title}" FontSize="16" Margin="10"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </Border>

        <!-- Основное содержимое -->
        <TransitioningContentControl Content="{Binding CurrentPage}" Margin="10"/>
    </DockPanel>
</Window>
