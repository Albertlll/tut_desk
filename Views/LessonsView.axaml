using Avalonia;
using Avalonia.Controls;
using Avalonia.Markup.Xaml;

namespace tutdesk.Views
{
    public partial class LessonsView : UserControl
    {
        public LessonsView()
        {
            InitializeComponent();
        }

        private void CloseCourse_Click(object sender, RoutedEventArgs e)
        {
            // Assuming MainWindow is your main window class
            var mainWindow = new MainWindow();
            mainWindow.Show();
            
            // Optionally, close the current window if needed
            var parentWindow = this.GetParentWindow();
            parentWindow?.Close();
        }
    }
}
